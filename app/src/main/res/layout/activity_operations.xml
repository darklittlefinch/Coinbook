<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.OperationsActivity">

    <TextView
        android:id="@+id/tv_operation_title"
        style="@style/activity_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/red"
        tools:text="@string/expenses_title" />

    <ImageView
        android:id="@+id/iv_back"
        style="@style/navigation_images"
        android:contentDescription="@string/content_description_left_arrow_image"
        app:layout_constraintBottom_toBottomOf="@+id/tv_operation_title"
        app:layout_constraintStart_toStartOf="@+id/tv_operation_title"
        app:layout_constraintTop_toTopOf="@+id/tv_operation_title"
        app:srcCompat="@drawable/ic_left_arrow" />

    <ImageView
        android:id="@+id/iv_add_new_operation"
        style="@style/navigation_images"
        android:contentDescription="@string/content_description_plus_green_image"
        app:layout_constraintBottom_toBottomOf="@+id/tv_operation_title"
        app:layout_constraintEnd_toEndOf="@+id/tv_operation_title"
        app:layout_constraintTop_toTopOf="@+id/tv_operation_title"
        app:srcCompat="@drawable/ic_plus_rounded" />

    <TextView
        android:id="@+id/tv_money_amount"
        style="@style/big_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_operation_title"
        tools:text="12 527 ₽" />

    <TextView
        android:id="@+id/tv_money_information"
        style="@style/text"
        android:textColor="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/tv_money_amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="You can spend 7 473 ₽ more this month" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_operations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_money_amount"
        tools:listitem="@layout/operation_item" />

</androidx.constraintlayout.widget.ConstraintLayout>