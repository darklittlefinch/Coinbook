<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Coinbook" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="base_narrow_top_bottom" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="base_image" parent="base_narrow_top_bottom">
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="main_activity_card_view" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="main_activity_thin_titles" parent="base_narrow_top_bottom">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="main_activity_bold_titles" parent="base_narrow_top_bottom">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="main_activity_bold_numbers" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="main_activity_thin_numbers" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="main_activity_big_image" parent="base_image">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
    </style>

    <style name="main_activity_small_image" parent="base_image">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">32dp</item>
    </style>

    <style name="details_titles" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="details_numbers_portrait" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="details_numbers_land" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="details_with_numbers_info" parent="base_narrow_top_bottom">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="detail_with_numbers_info_land" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="details_without_numbers_info" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="details_giant_image" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_marginBottom">48dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_width">180dp</item>
    </style>

    <style name="details_big_image" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_width">120dp</item>
    </style>

    <style name="details_medium_image" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
    </style>

    <style name="details_small_image" parent="base_image">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">32dp</item>
    </style>

    <style name="details_navigation_images" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_margin">16dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_width">28dp</item>
    </style>

    <style name="details_add_category_button" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_margin">8dp</item>
        <item name="android:backgroundTint">@color/pale_red</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="items_text" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="items_text_bold" parent="items_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="items_text_pale" parent="items_text">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="items_numbers" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="settings_titles" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="settings_divider" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="add_fragments_titles" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="add_fragments_inputs" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="add_fragments_buttons" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Theme.Coinbook" parent="Base.Theme.Coinbook" />
</resources>