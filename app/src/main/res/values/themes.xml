<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Coinbook" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="base_narrow_top_bottom" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="card" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="text_info_narrow_top_bottom" parent="base_narrow_top_bottom">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="activity_titles" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="text_info" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_without_top_bottom" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="text_landscape" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="thin_numbers" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bold_numbers" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="medium_numbers" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="titles" parent="base_narrow_top_bottom">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bold_titles" parent="base_narrow_top_bottom">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="information" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="main_screen_numbers" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="big_numbers_portrait" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="big_numbers_portrait_without_pics" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="big_numbers_landscape" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="big_numbers_landscape_without_pics" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="image" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="small_image" parent="image">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">32dp</item>
    </style>

    <style name="medium_image" parent="image">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
    </style>

    <style name="big_image" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_width">120dp</item>
    </style>

    <style name="giant_image" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_marginBottom">48dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_width">180dp</item>
    </style>

    <style name="big_image_landscape" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
    </style>

    <style name="navigation_images" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_margin">16dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_width">28dp</item>
    </style>

    <style name="settings_text" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="settings_titles" parent="settings_text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="settings_divider" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="add_fragments_inputs" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Coinbook" parent="Base.Theme.Coinbook" />
</resources>